
@{
    ViewBag.Title = "Nature Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}


<div class="container">
    <br/>
    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10">
            <div class="well">
                <p>Prints are available starting at $15.00 plus shipping, either on canvas or Designer Collection Frame. <br/>
                    <strong>Available sizes:</strong> 5x7 8x10 10x20 11x14 12x12 12x36 16x20 <br/>
                    Please contact me for quotes on prints. <br/>
                    <a href="mailto:wbatton@wbattonphotography.com">wbatton@wbattonphotography.com</a>
                </p>
            </div>
        </div>
        <div class="col-xs-1"></div>
    </div>

    <div class="row">
        @{
            foreach (var fullPath in ViewBag.Photos)
            {

                var fileName = Path.GetFileName(fullPath);
                var id = Path.GetFileNameWithoutExtension(fullPath);
                var target = "#" + @id;

                <div class="col-xs-2 thumbCell">
                    <div class="nailthumb-container squareImage">
                        <a href="#" data-toggle="modal" data-target="@target">
                            <img class="nailthumb-image" src="~/Images/Nature/@fileName"/>
                        </a>
                    </div>
                </div>

                    <div class="modal fade" id="@id" tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><span class="glyphicon glyphicon-remove text-danger"></span></span></button>
                                <div class="text-center">
                                    <h4 class="modal-title" id="myModalLabel">@id</h4>
                                </div>
                            </div>
                            <div class="modal-body">
                                <img id="current" src="~/Images/Nature/@fileName" class="img-responsive"/>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                <a href="~/Images/Nature/@fileName" target="_blank" title="Open full size">
                                    <div type="button" class="btn btn-success"><span class="glyphicon glyphicon-new-window"></span></div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                count++;
            }
        }
    </div>
</div>