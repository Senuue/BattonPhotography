
@{
    ViewBag.Title = "Nature Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}
<style>
    .imgContainer {
        width: 150px;
        height: 150px;
    }

    .imgContainer img {
        width: auto;
        height: 100%;
    }
</style>

<div class="container">
    <div class="row">
        @{
            foreach (var fullPath in ViewBag.Photos)
            {
                if (count%6 == 0)
                {
                    @:</div>
                    <br/>
                    @:<div class="row">
                }

                var fileName = Path.GetFileName(fullPath);

                <div class="col-xs-2">
                    <div class="imgContainer">
                        <a href="~/Images/Nature/@fileName" id="@fileName" target="_blank">
                            <img src="~/Images/Nature/@fileName" alt="@fileName" class="img-responsive" />
                        </a>
                    </div>
                    <a href="@Url.Action("RequestPrint", "Home", new {gallery = "Nature", file = @fileName})">
                        <div class="btn btn-sm btn-success">Request Print</div>
                    </a>
                </div>


                count = count + 1;
            }
        }
    </div>
</div>

    